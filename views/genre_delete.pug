extends layout

block content
  h1 #{title}: #{genre.name}

  if books.length==0
    p Do you really want to delete this Genre?

    form(method='POST' action='')
      div.form-group
        input#genre_id.form_control(type='hidden',name='genre_id', required='true', value=genre.id) 

      button.btn.btn-primary(type='submit') Delete
  else 
    p #[strong Delete the following books before deleting this Genre]
    h4 Books:
    dl
      each book in books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}
      